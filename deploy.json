{
  "name": "f1-telemetry",
  "version": "1.0.0",
  "description": "F1 Telemetry Viewer - Experience Formula 1 races through telemetry data",
  "build": {
    "commands": [
      "pip install -r requirements.txt",
      "npm install", 
      "npm run build"
    ]
  },
  "start": {
    "command": "cd listener && python app.py"
  },
  "env": {
    "PORT": "5000",
    "FLASK_ENV": "production"
  }
}
